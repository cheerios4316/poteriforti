  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "project:setup": "composer clear-cache && composer upgrade && npm install --verbose && npm run build:all",
    "build:tailwind": "npx tailwindcss -i ./tailwind/init.css -o ./public/dist/tailwind.css",
    "build:ts": "npx tsc",
    "build:js": "node build-scripts/esbuild.config.mjs",
    "watch:js": "node build-scripts/esbuild.config.mjs --watch",
    "build:css": "npm run build:tailwind && node build-scripts/esbuild.css.mjs",
    "watch:css": "node build-scripts/watch.css.mjs",
    "watch:all": "concurrently \"npm:watch:css\" \"npm:watch:js\"",
    "build:all": "npm run build:css && npm run build:js",
    "gen:component": "npx create-dumpsterfire-app --component",
    "gen:controller": "npx create-dumpsterfire-app --controller"
  },
